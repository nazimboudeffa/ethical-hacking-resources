<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Codeur de Jeux</title>

  <!-- Bootstrap core CSS -->
  <link href="../../vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
  <script src="https://cdn.jsdelivr.net/npm/sharer.js@latest/sharer.min.js"></script>
  <!-- Custom styles for this template -->
  <link href="../../css/blog-home.css" rel="stylesheet">

</head>

<body>

  <!-- Bootstrap core JavaScript -->
  <script src="../../vendor/jquery/jquery.min.js"></script>
  <script src="../../vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <% include ./partials/navbar.ejs %>
  </nav>

  <!-- Page Content -->
  <div class="container">

    <div class="row">

      <!-- Blog Entries Column -->
      <div class="col-md-8">
        <h1 class="my-4">Liste des Articles
        </h1>

        <% for (var i=0; i < articles.length; i++) {%>
          <% include ./partials/short-dynamic %>
        <% } %>


      </div>

      <!-- Sidebar Widgets Column -->
        <div class="col-md-4">

        <% include partials/share %>

        <% include partials/tags %>

        <% include partials/sponsor %>

        </div>

    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->

  <script type="text/javascript">

    $(document).ready(function(){
      for (var i=0; i < <%= articles.length %>; i++){
        $("#mydiv-" + i).find(".card-title").html($("#myarticle-"+ i).find('h2:first').text().substring(0, 20) + " ...");
        $("#mydiv-" + i).find(".card-text").html($("#myarticle-"+ i).find('p:first').text().substring(0, 100) + " ...");
      }
      $(".button").attr("data-url", window.location.href);
    })

  </script>

  <% include partials/footer %>

</body>

</html>
